{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,

    // TypeORM requirement
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "src/**/*.example.json"
  ]
}